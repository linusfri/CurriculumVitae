{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["**/dist/*.js"],
    "rules": {
        "semi": [2, "always"],
        "quotes": "off",
        "indent": ["error", 4]
    }
}
